<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOSU"
    tools:context=".CreateTeacherProfileActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:fontFamily="sans-serif"
        android:text="@string/new_teacher"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="27dp" />

    <ImageButton
        android:id="@+id/chooseProfilePcitureButton"
        android:layout_width="139dp"
        android:layout_height="134dp"
        android:contentDescription="Holds profile image. "
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/firstNameLabelNewTeacherProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="236dp" />

    <TextView
        android:id="@+id/lastNameLabelNewTeacherProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="299dp" />

    <TextView
        android:id="@+id/passwordLabelNewTeacherProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="429dp" />

    <TextView
        android:id="@+id/confirmPasswordLabelNewTeacherProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="496dp" />

    <TextView
        android:id="@+id/courseNameLabelNewTeacherProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_name"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="563dp" />

    <TextView
        android:id="@+id/emailLabelNewTeacherProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="363dp" />

    <Button
        android:id="@+id/submitNewTeacherProfile"
        android:layout_width="243dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/submit"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="646dp" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="John/Jane"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Doe"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="318dp" />

    <EditText
        android:id="@+id/courseNameEditText"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="CS4153"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="582dp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="john/jane_doe@domain.com"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="382dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="P@55w0rd1!"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="448dp" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="P@55w0rd1!"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="515dp" />
</androidx.constraintlayout.widget.ConstraintLayout>