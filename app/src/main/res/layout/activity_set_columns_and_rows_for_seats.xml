<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOSU"
    tools:context=".SetColumnsAndRowsForSeats">

    <TextView
        android:id="@+id/numRowsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Number Of Rows:"
        app:layout_constraintTop_toBottomOf="@+id/numColumnsEditText"
        tools:layout_editor_absoluteX="33dp" />

    <TextView
        android:id="@+id/numColumnsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Number Of Columns:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/numColumnsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/numColumnsTextView"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/numRowsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/numRowsTextView"
        tools:layout_editor_absoluteX="33dp" />

    <Button
        android:id="@+id/submitColumnsAndRowsButton"
        android:layout_width="219dp"
        android:layout_height="75dp"
        android:layout_marginTop="314dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numRowsEditText"
        tools:layout_editor_absoluteX="96dp" />
</androidx.constraintlayout.widget.ConstraintLayout>