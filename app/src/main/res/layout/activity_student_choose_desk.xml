<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOSU"
    tools:context=".StudentChooseDesk">

    <!-- TODO: Fix Constraints for GridLayout. -->

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/studentChairViewGridLayout"
        android:layout_width="409dp"
        android:layout_height="428dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/studentProfilePictureInChooseDeskActivity"
        tools:layout_editor_absoluteX="2dp">

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/studentProfilePictureInChooseDeskActivity"
        android:layout_width="97dp"
        android:layout_height="99dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/studentNameInChooseDeskActivity"
        android:layout_width="235dp"
        android:layout_height="22dp"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="160dp" />

    <TextView
        android:id="@+id/studentAttendanceInChooseDeskActivity"
        android:layout_width="235dp"
        android:layout_height="22dp"
        android:layout_marginTop="55dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/studentNameInChooseDeskActivity"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/submitChairButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/studentChairViewGridLayout"
        tools:layout_editor_absoluteX="165dp" />

</androidx.constraintlayout.widget.ConstraintLayout>