<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOSU"
    tools:context=".TeacherCreateDesks">

    <!-- TODO: Fix contstraints for page. -->

    <ImageButton
        android:id="@+id/testStudentButton"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="23dp"
        android:background="@null"
        android:contentDescription="g8IuOC8EnfhCOFaEQgv9u0ZVeGH2"
        app:layout_constraintStart_toEndOf="@+id/teacherProfilePictureCreateDesksImageView"
        app:layout_constraintTop_toBottomOf="@+id/teachersNameCreateDesksTextView"
        app:srcCompat="@android:drawable/ic_popup_sync" />

    <Button
        android:id="@+id/submitAttendance"
        android:layout_width="225dp"
        android:layout_height="76dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seatsGridLayout" />

    <ImageView
        android:id="@+id/teacherProfilePictureCreateDesksImageView"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/teachersNameCreateDesksTextView"
        android:layout_width="162dp"
        android:layout_height="36dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="26dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/teacherProfilePictureCreateDesksImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/editSeatsButton"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="23dp"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@+id/testStudentButton"
        app:layout_constraintTop_toBottomOf="@+id/teachersNameCreateDesksTextView"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/seatsGridLayout"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="6dp"
        android:background="@color/colorPrimary"
        app:alignmentMode="alignBounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSeatsButton"
        app:useDefaultMargins="true">

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>