<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOSU"
    tools:context=".TeacherCreateDesks">

    <!-- TODO: Fix contstraints for page. -->

    <ImageButton
        android:id="@+id/testStudentButton"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:backgroundTint="#E91E63"
        android:contentDescription="g8IuOC8EnfhCOFaEQgv9u0ZVeGH2"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="98dp" />

    <GridView
        android:id="@+id/availSeatsGridView"
        android:layout_width="401dp"
        android:layout_height="428dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSeatsButton" >

    </GridView>

    <Button
        android:id="@+id/submitAttendance"
        android:layout_width="225dp"
        android:layout_height="76dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="33dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/availSeatsGridView" />

    <ImageView
        android:id="@+id/teacherProfilePictureCreateDesksImageView"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/teachersNameCreateDesksTextView"
        android:layout_width="162dp"
        android:layout_height="36dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="34dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/teacherProfilePictureCreateDesksImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/editSeatsButton"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:layout_marginStart="207dp"
        android:layout_marginTop="23dp"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@+id/teacherProfilePictureCreateDesksImageView"
        app:layout_constraintTop_toBottomOf="@+id/teachersNameCreateDesksTextView"
        app:srcCompat="@android:drawable/ic_menu_manage" />

</androidx.constraintlayout.widget.ConstraintLayout>